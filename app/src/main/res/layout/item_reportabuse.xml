<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_height="250dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason for report abuse"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <!--<com.example.amazad.hibq.FontStyle.TextViewFontStyle-->

            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Please verify your account"-->
            <!--android:layout_margin="5dp"-->

            <!--android:textColor="@color/black"-->
            <!--android:textSize="12sp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittextback">

            <com.mobiletemple.photopeople.customStyle.EdittextLailaregular
                android:id="@+id/descripationET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Write here..."
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:background="@drawable/buttonback">
                <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:background="@drawable/budgetback">
                <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Ok"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1">

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>