<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardElevation="5dp"
        android:layout_height="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/event_pic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/birthday_default"
                    app:civ_border_width="1dp"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="2dp"
                    app:civ_border_color="@color/colorPrimary"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:weightSum="1.6"
                android:gravity="start"
                android:layout_gravity="center"
                android:padding="3dp"
                android:orientation="vertical"
                >

                <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:text="Name"
                    android:textColor="#f95370"
                    android:textSize="14sp"
                    />

                <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                    android:id="@+id/eventname"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:text="Event Name"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:layout_gravity="center"

                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/age_fl"/>

                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:id="@+id/eventdate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="25sep18 to 30sep18"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="#727272"
                        android:textSize="10sp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:layout_gravity="center"

                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/city_jd"/>

                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="Indore"
                        android:gravity="center"
                        android:singleLine="true"

                        android:textColor="#727272"
                        android:textSize="10sp"
                        />


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:gravity="end"

                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/rupi_jd"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />

                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:text="10k"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    android:layout_marginRight="5dp"

                    android:gravity="end">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/chat_icon"
                        android:layout_gravity="end"
                        android:gravity="end"
                        />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ratingll"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"

                    android:layout_marginRight="5dp"

                    android:gravity="center">
                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Rating"
                        android:gravity="center"
                        android:background="@drawable/edittextback"

                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
