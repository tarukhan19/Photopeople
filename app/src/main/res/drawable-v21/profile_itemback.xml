<?xml version="1.0" encoding="utf-8"?>
<!-- in drawable folder-->
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/white"
    >

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid
                android:color="#FA7B93" >
            </solid>



            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="32dp"   >
            </corners>

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <!-- put your background color here-->
            <solid
                android:color="#FA7B93" >
            </solid>



            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="32dp"   >
            </corners>

        </shape>
    </item>

</ripple>