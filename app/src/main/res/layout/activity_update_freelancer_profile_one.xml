<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context="com.mobiletemple.photopeople.UpdateFreelancerProfileOne">
    <include layout="@layout/tootlbar" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/personalLL"
            android:background="@drawable/llrippleefect"

            android:layout_height="match_parent">

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"


                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:text="Update Personal Info"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:tint="@color/black"
                android:src="@mipmap/arrow"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/equipmentll"
            android:background="@drawable/llrippleefect"
            android:layout_height="match_parent">

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:text="Update Equipment"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:tint="@color/black"
                android:src="@mipmap/arrow"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
