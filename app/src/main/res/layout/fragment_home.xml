<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomNavigation.HomeFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:elevation="12dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/seemorell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"

            android:layout_gravity="end">

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#2b2b2b"
                android:textSize="10sp"
                android:text="See More"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/seemore"/>

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/can_ph"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:background="@drawable/llrippleefect"

                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/candind_photographer"/>
                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#727272"
                        android:text="Candid Photographer"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/can_vid"
                    android:background="@drawable/llrippleefect"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/candid_videography"/>
                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#727272"
                        android:text="Candid Videographer"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/trad_ph"
                    android:background="@drawable/llrippleefect"

                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/traditional_photography"/>
                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#727272"
                        android:text="Traditional Photographer"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/trad_vid"

                    android:background="@drawable/llrippleefect"

                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/traditional_videography"/>
                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#727272"
                        android:text="Traditional Videographer"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/helicam"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:background="@drawable/llrippleefect"

                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/helicam"/>
                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#727272"
                        android:text="Helicam Operator"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/designer"
                    android:background="@drawable/llrippleefect"

                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/designer"/>
                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#727272"
                        android:text="Designer"
                        android:gravity="center"
                        />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/vid_editor"
                    android:background="@drawable/llrippleefect"

                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/video_editor"/>
                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#727272"
                        android:text="Video Editor"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/live_printing"
                    android:background="@drawable/llrippleefect"

                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/live_printing"/>
                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="Live Printing"
                        android:gravity="center"
                        android:textColor="#727272"
                        />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/camerarental"
                    android:background="@drawable/llrippleefect"

                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:tint="@color/colorPrimary"
                        android:src="@mipmap/ic_camerarental"/>
                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="Camera Rental"
                        android:gravity="center"
                        android:textColor="#727272"
                        />
                </LinearLayout>




            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp">
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            android:background="@color/white"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"

                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="2dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/dash_top_bg"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_weight="0.7">
                        <com.mobiletemple.photopeople.customStyle.TextViewLailaibold
                            android:id="@+id/eventtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            />
                        <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#feff50"
                            android:textSize="12sp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/placeiv"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:tint="@color/white"
                                android:visibility="gone"
                                android:src="@drawable/city_fld"/>

                            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                                android:id="@+id/place"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="0.3">
                        <ImageView
                            android:id="@+id/eventimage"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/birthday_default"
                            />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/upcomeventviewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:text="View all"
                android:textColor="@color/colorPrimary" />


            <androidx.cardview.widget.CardView
                android:id="@+id/ad1LL"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"

                >

                <ImageView
                    android:id="@+id/ad1IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@color/black"

                    />

                <ImageView
                    android:id="@+id/play1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_playbutton"

                    />

            </androidx.cardview.widget.CardView>


            <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Inspirational Photographs"
                android:textColor="#2b2b2b"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="15sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pic_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@null"
                android:clipToPadding="false" />

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/inspPicviewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="end"
                android:text="View all"
                android:textColor="@color/colorPrimary" />


            <androidx.cardview.widget.CardView
                android:id="@+id/ad2LL"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="5dp"
                android:visibility="gone"

                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/ad2IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@color/black"

                    />

                <ImageView
                    android:id="@+id/play2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_playbutton"

                    />

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotdeal" />

                <com.mobiletemple.photopeople.customStyle.TextViewLailaibold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Hot Deals"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hotdeal_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="100dp"
                    android:background="@null"
                    android:clipToPadding="false"

                    android:paddingLeft="25dp"
                    android:paddingRight="25dp" />

            </RelativeLayout>

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/hotDealsviewall"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:text="View all"
                android:textColor="@color/colorPrimary" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ad3LL"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"

                >

                <ImageView
                    android:id="@+id/ad3IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@mipmap/ic_playbutton"
                    android:src="@color/black"

                    />

                <ImageView
                    android:id="@+id/play3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_playbutton"

                    />
            </androidx.cardview.widget.CardView>



            <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Photography tips"
                android:textSize="15sp"
                android:textColor="#2b2b2b" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tips_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@null"
                android:clipToPadding="false" />


            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/photoTipsviewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:text="View all"
                android:textColor="@color/colorPrimary" />


            <androidx.cardview.widget.CardView
                android:id="@+id/ad4LL"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"

                >

                <ImageView
                    android:id="@+id/ad4IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@color/black"
                    />

                <ImageView
                    android:id="@+id/play4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_playbutton"

                    />

            </androidx.cardview.widget.CardView>





            <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:text="Featured Freelancer"
                android:textColor="#2b2b2b" />


            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@null"
                android:clipToPadding="false"

                />

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/featureviewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:text="View all"
                android:textColor="@color/colorPrimary" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ad5LL"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"

                >
                <ImageView
                    android:id="@+id/ad5IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@color/black"
                    />

                <ImageView
                    android:id="@+id/play5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_playbutton"

                    />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/homecalback"
                android:gravity="center"
                android:layout_marginTop="5dp"

                android:orientation="horizontal"
                android:weightSum="1">

                <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:layout_marginLeft="10dp"
                    android:text="My Calendar"
                    android:textSize="15sp"
                    android:textColor="#2b2b2b" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.3">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:src="@drawable/calender_q" />
                </LinearLayout>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/ad6LL"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <ImageView
                    android:id="@+id/ad6IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@color/black"

                    />

                <ImageView
                    android:id="@+id/play6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_playbutton"

                    />

            </androidx.cardview.widget.CardView>



