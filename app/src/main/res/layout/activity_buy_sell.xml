<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/screenback"
    tools:context=".BuySell.BuySellActivity">

    <ScrollView
        android:layout_width="match_parent" android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_back"
                android:tint="@color/black"
                android:background="@drawable/whiteripple"

                />


    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What you want?"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/buy_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_marginRight="30dp">

        <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:text="BUY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:gravity="end"
            >
            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/newLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:gravity="center"
                />

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/oldll"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OLD"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/sell"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/sell_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginRight="30dp">

        <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:text="SELL"
            />




    </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>