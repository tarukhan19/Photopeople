<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    app:cardElevation="5dp"
    android:layout_height="110dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/event_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/birthday_default"
                app:civ_border_width="1dp"
                android:layout_marginRight="2dp"
                app:civ_border_color="@color/colorPrimary"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:weightSum="1.6"
            android:gravity="start"
            android:layout_gravity="center"
            android:padding="3dp"
            android:orientation="vertical"
            >

            <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="Name"
                android:textColor="#f95370"
                android:textSize="14sp"
                />

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/eventname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="Event Name"
                android:textColor="@color/black"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"

                android:orientation="horizontal">

                <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                    android:id="@+id/eventdate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="25sep18 to 30sep18"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#727272"
                    android:textSize="10sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_gravity="center"

                android:orientation="horizontal">


                <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Indore"
                    android:gravity="center"
                    android:singleLine="true"

                    android:textColor="#727272"
                    android:textSize="10sp"
                    />


            </LinearLayout>



        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="3dp"
        android:orientation="vertical"
        >

        <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Amount"
            android:textSize="10sp"
            android:singleLine="true"
            android:textColor="@color/black"

            />

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/stage1amnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25sep18 to 30sep18"
                android:singleLine="true"

                android:textColor="#727272"
                android:textSize="8sp"
                />

        <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Amount"
            android:singleLine="true"
            android:textSize="10sp"
            android:textColor="@color/black"

            />

        <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
            android:id="@+id/stage2amnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25sep18 to 30sep18"
            android:singleLine="true"
            android:textColor="#727272"
            android:textSize="8sp"
            />

    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
