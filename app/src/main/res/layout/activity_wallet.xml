<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobiletemple.photopeople.WalletActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >
        <include layout="@layout/tootlbar" />
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            card_view:cardCornerRadius="5sp"
            card_view:cardElevation="5sp"
            card_view:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bonus"
                        android:textColor="#727272"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:id="@+id/bonus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#727272"
                        android:textSize="20dp"
                        android:gravity="end"
                        android:text="0" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet Amount"
                        android:textColor="#727272"
                        android:textSize="20dp"

                        android:textStyle="bold" />

                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:id="@+id/walletamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#727272"
                        android:textSize="20dp"
                        android:gravity="end"
                        android:text="0" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:textColor="#727272"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:id="@+id/mycash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#727272"
                        android:textSize="20dp"
                        android:gravity="end"
                        android:text="0" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:textColor="#727272"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:id="@+id/total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#727272"
                        android:textSize="20dp"
                        android:gravity="end"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usable Amount"
                        android:textColor="#727272"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                        android:id="@+id/usableamnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#727272"
                        android:textSize="20dp"
                        android:gravity="end"
                        android:text="0" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            card_view:cardCornerRadius="5sp"
            card_view:cardElevation="5sp"
            card_view:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gross Total"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                    android:id="@+id/grossstotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:gravity="end"
                    android:text="0" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</RelativeLayout>
