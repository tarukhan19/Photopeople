<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Freelancer.FreelancerDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/tootlbar" />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/profile_wall"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/curvelinearlayout"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:weightSum="1"
            android:elevation="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical">


        <LinearLayout

            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
           android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.3">

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:gravity=""
                android:orientation="horizontal">

                <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    />
                <com.mobiletemple.photopeople.customStyle.TextViewLailasemibold
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="12sp"
                />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/customRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:clickable="false"
        android:isIndicator="true"

        />

</LinearLayout>

        </LinearLayout>


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="0.3">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="fixed"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:tabGravity="fill"/>

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

    <com.mobiletemple.photopeople.customStyle.HexagonImageView
        android:id="@+id/iv_pic"
        android:layout_width="80dp"
        android:layout_height="90dp"
        app:poly_border="true"
        app:poly_corner_radius="18"
        app:poly_rotation_angle="90"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-170dp"
        android:layout_marginBottom="80dp"
        android:scaleType="centerCrop"
        app:poly_vertices="6" />

    <androidx.core.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="96dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:paddingTop="6dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        android:background="@drawable/elevation"
        >
    <LinearLayout
        android:id="@+id/afterbooking"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

     <LinearLayout
         android:layout_width="80dp"
         android:layout_height="match_parent"
         android:layout_marginLeft="20dp"
         android:layout_gravity="center"
         android:gravity="center"
         android:orientation="vertical"
         >

      <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Booking Amount"
          android:layout_gravity="center"
          android:gravity="center"
          android:textColor="@color/black"

          android:textSize="8sp"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/red_progress">
            <com.mobiletemple.photopeople.customStyle.TextViewLailaibold
                android:id="@+id/stage1TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="25%"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:orientation="horizontal">
             <ImageView
                 android:layout_width="8dp"
                 android:layout_height="8dp"
                 android:tint="@color/black"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:src="@drawable/rupi"/>
             <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                 android:id="@+id/per25amount"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:textColor="@color/black"
                 android:text=""
                 android:textSize="8sp"/>

         </LinearLayout>
     </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:gravity="center"

            >

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Final Amount"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"

                android:textSize="8sp"/>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/blue_progress">
                <com.mobiletemple.photopeople.customStyle.TextViewLailaibold
                    android:id="@+id/stage2TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="75%"
                    android:textColor="#185EDC"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:tint="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/rupi"/>
                <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                    android:id="@+id/per75amount"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text=""
                    android:textSize="8sp"/>

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/applycoupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/colorPrimary"
                android:text="Apply Coupon Code"
                android:textSize="8sp"/>

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/quote"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rippleeffect"
                android:textColor="@color/white"
                android:text="Quote"
                android:textSize="12sp"/>

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:visibility="gone"
                android:id="@+id/MakePayment"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rippleeffect"
                android:textColor="@color/white"
                android:text="Payment"
                android:textSize="12sp"/>

            <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
                android:id="@+id/editprofile"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rippleeffect"
                android:textColor="@color/white"
                android:text="Edit Profile"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/msgll"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/light_grey"
        android:gravity="center"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <com.mobiletemple.photopeople.customStyle.TextViewLailaregular
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Your 25% of payment is received. Your whole payment will be released after completion of your work."
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>

